doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Course Shift App
  link(rel='stylesheet' href='styles.css')
  // You can link your stylesheet here
  style.
    /* Paste the additional CSS code here */
    body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f2f2f2;
    }
    header {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 1em 0;
    }
    nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    }
    nav li {
    display: inline-block;
    margin-right: 20px;
    }
    nav a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 16px;
    transition: color 0.3s;
    }
    nav a:hover {
    color: #ffd700;
    }
    main {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 1em 0;
    position: fixed;
    bottom: 0;
    width: 100%;
    }
header
  h1 Course Shift App
  nav
    ul
      li
        a(href='#') Home
      li
        a(href='Register') Register
      li
        a(href='login') Login
      li
        a(href='shiftrequest') Shift-Requests
