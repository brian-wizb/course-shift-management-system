doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Student Registration
  link(rel='stylesheet' href='styles.css')
  // You can link your stylesheet here
  style.
    /* Paste the additional CSS code here */
    body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f2f2f2;
    }
    header {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 1em 0;
    }
    nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    }
    nav li {
    display: inline-block;
    margin-right: 20px;
    }
    nav a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    font-size: 16px;
    transition: color 0.3s;
    }
    nav a:hover {
    color: #ffd700;
    }
    main {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 1em 0;
    position: fixed;
    bottom: 0;
    width: 100%;
    }
    form {
    display: flex;
    flex-direction: column;
    }
    label {
    margin-bottom: 8px;
    font-weight: bold;
    }
    input {
    padding: 8px;
    margin-bottom: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    }
    button {
    padding: 10px;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    button:hover {
    background-color: #555;
    }
header
  h1 Course Shift App
  nav
    ul
      li
        a(href='#') Home
      li
        a(href='Register') Register
      li
        a(href='#') Login
      li
        a(href='shiftrequest') shiftrequests
main
  h2 Login 
  form(action='/login' method='post')
    label(for='registrationNumber') Registration Number:
    input#registrationNumber(type='text' name='registrationNumber' required='')
    
    label(for='password') Password:
    input#password(type='password' name='password' required='')
    button(type='submit') Login
footer
